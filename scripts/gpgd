#!/usr/bin/env bash

set -euo pipefail

declare GPG_IMAGE_VERSION=${GPG_IMAGE_VERSION:-"1.0.7"}

if [[ ! "${PASSWORD_MAIN_KEY}" ]]; then
	echo "FATAL: No PASSWORD_MAIN_KEY specified." >&2
	exit 1
fi

docker run --rm -it \
           -e PASSWORD_MAIN_KEY \
           -e PASSWORD_RECIPIENTS \
           -e PASSWORD_SUB \
           -v /etc/secrets/keys:/etc/secrets/keys:ro \
           -v ${HOME}/src/bitbucket.org/hkjn/passwords:/crypt \
           --workdir /crypt/${PASSWORD_SUB} hkjn/gpg:${GPG_IMAGE_VERSION}

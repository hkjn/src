general {
        colors = true
        interval = 5
}

order += "battery _first_"
order += "cpu_usage"
order += "load"
order += "disk /"
order += "volume master"
order += "wireless _first_"
order += "tztime local"

# order += "ipv6"
# order += "cpu_temperature 0"

wireless _first_ {
        # if you use %speed, i3status requires root privileges
#        format_up = "E: %ip (%speed)"
        format_up = "%quality at %essid, %bitrate / %frequency"
        format_down = "E: down"
}

battery _first_ {
        format = "%status %percentage %remaining %emptytime"
        status_chr = "⚡ CHR"
        status_bat = "BAT"
        status_unk = "UNK"
        status_full = "☻ FULL"
        format_down = "No battery"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

cpu_usage {
        format = "CPU %usage "
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}


disk "/" {
        format = "%percentage_used"
}

volume master {
        format = "♪: %volume"
        format_muted = "♪: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}


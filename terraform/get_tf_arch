#
# Echo the Terraform architecture string to use for https://releases.hashicorp.com/terraform/<version>.
#
set -euo pipefail

declare ARCH="$(uname -m)"
if [[ "${ARCH}" = "arm64" ]]; then
        echo "darwin_arm64"
elif [[ "${ARCH}" = "x86_64" ]]; then
        echo "linux_amd64"
elif [[ "${ARCH}" = "armv7l" ]]; then
        echo "linux_arm"
else
        echo "FATAL: Unsupported CPU arch ${ARCH}." >&2
        exit 1
fi
